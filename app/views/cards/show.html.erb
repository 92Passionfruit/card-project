<div style="display: flex; justify-content: center;">
  <div class="card" style="width: 250px; height: 400px; border: 2px solid black;">
    <% if @card.image.attached? %>
      <%= image_tag @card.image, class: "card-img-top img-fluid", style: "width: 100%; height: 200px; object-fit: cover;" %>
    <% end %>
    <div class="card-body" style="max-height: 200px; overflow: auto;">
      <h5 class="card-title text-center" style="font-size: 1.2rem;"><%= @card.card_name %></h5>
      <p class="card-text" style="font-size: 0.7rem;"><%= @card.description %></p>
      <ul class="list-group list-group-flush">
        <li class="list-group-item text-center bg-light" style="font-size: 0.6rem;">~ <%= @card.collection_name %> Collection ~</li>
      </ul>
    </div>
  </div>
</div>


<br>

<div style="display: flex; justify-content: center;">
  <div style="margin-right: 10px;">
    <%= link_to "Edit this card", edit_card_path(@card), class: "btn btn-outline-warning" %>
  </div>
  <div style="margin-left: 10px;">
    <%= link_to "Destroy this card", @card, class: "btn btn-outline-danger destroy-card", 'data-turbo-method': :delete, onclick: "return confirm('Are you sure you want to delete this card?');" %>
  </div>
</div>
<br>
<%= link_to "Back to my cards", cards_path %>
